# StreamHub Environment Variables
# Copy this file to .env and fill in your values for local development

# Database Configuration
# For local development (SQLite will be used automatically if not set)
DATABASE_URL=sqlite:///./streamhub.db
# For production (Render provides this automatically)
# DATABASE_URL=postgresql://user:password@host:port/database

# Application Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
PORT=8000
HOST=0.0.0.0

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Render Specific (automatically set by Render)
RENDER_SERVICE_NAME=streamhub
RENDER_EXTERNAL_URL=https://your-app.onrender.com

# Optional: Custom Domain
CUSTOM_DOMAIN=your-domain.com

# Optional: Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
ENABLE_ANALYTICS=False

# Optional: Admin Authentication (for future enhancement)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_password_here

# Optional: CORS Settings
CORS_ORIGINS=["https://your-domain.com", "https://your-app.onrender.com"]

# Optional: Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# Optional: Logging Level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
